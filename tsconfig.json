{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2022.String"],
    "rootDir": "src",
    "outDir": "bin",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
      "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"]
} 